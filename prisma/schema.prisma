generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Raider {
  id             Int                 @id @default(autoincrement())
  name           String
  server         String
  role           Role
  currentIlvl    Float?

  history        ItemLevelHistory[]

  @@unique([name, server])
}

model ItemLevelHistory {
  id        Int      @id @default(autoincrement())
  raiderId  Int
  raider    Raider   @relation(fields: [raiderId], references: [id])
  ilvl      Float
  recordedAt DateTime @default(now())
}

enum Role {
  TANK
  HEALER
  DPS
}